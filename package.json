{
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \".\"",
    "clear": "rimraf **/node_modules **/.turbo **/dist"
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-dbenhance": "workspace:*",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "rimraf": "^3.0.2",
    "turbo": "latest"
  }
}
